<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yoshilab.qiita.Sub003Activity"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView
                android:text="Name"
                android:layout_width="110dp"
                android:layout_height="match_parent" android:id="@+id/textView5"
                android:textSize="20sp" android:gravity="center" android:textColor="@android:color/black"
                tools:ignore="HardcodedText"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editname" android:singleLine="true" android:selectAllOnFocus="true"
                tools:ignore="Deprecated,LabelFor"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Password"
                android:layout_width="110dp"
                android:layout_height="match_parent" android:id="@+id/textView6"
                android:textSize="20sp" android:gravity="center" android:textColor="@android:color/black"
                tools:ignore="HardcodedText"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword" android:layout_weight="1" tools:ignore="InefficientWeight,LabelFor"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="107dp"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">
        <Button
                android:text="import"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/importbutton" android:layout_weight="1"
                tools:ignore="HardcodedText,InefficientWeight" android:background="#ff6699"
                android:textColor="#ffffff" android:textStyle="bold" android:onClick="onClick"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gottext" android:layout_weight="1"
                android:gravity="center" android:layout_marginTop="20dp" android:textSize="25sp"
                tools:ignore="HardcodedText,InefficientWeight" android:text="name"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <TextView
                android:text="password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gottext2" android:layout_weight="1"
                tools:ignore="HardcodedText,InefficientWeight" android:gravity="center" android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>
